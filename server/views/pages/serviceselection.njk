{% extends "../partials/layout.njk" %}
{% set mainClasses = "app-container govuk-body" %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/button/macro.njk" import govukButton %}



{% block content %}
<p>Creating SAR report for [prisoner name]</p>
<p>API RESPONSE: {{ servicelist }}</p>

{{ govukCheckboxes({
  name: "services",
  fieldset: {
    legend: {
      text: "Select services",
      isPageHeading: true,
      classes: "govuk-fieldset__legend--l"
    }
  },
  hint: {
    text: "Select all services to collect data from, or click 'Select All'"
  },
  items: [
    {
      value: "Select All",
      text: "Select All"
    },
    {
      divider: "or"
    },
    {
      value: "Service 1",
      text: "Data from x"
    },
    {
      value: "Service 2",
      text: "Data from y"
    },
    {
      value: "Service 3",
      text: "Data from z"
    }
  ]
}) }}


{{ govukButton({
  text: "Confirm"
}) }}

{% endblock %}