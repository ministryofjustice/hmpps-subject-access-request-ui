{% extends "../../partials/layout.njk" %}
{% set mainClasses = "app-container govuk-body" %}
{%- from "moj/components/interruption-card/macro.njk" import interruptionCard -%}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block content %}

    {% if registerError %}
        {{ govukErrorSummary({
            titleText: "Problem registering template",
            errorList: [
                {
                    text: registerError
                }
            ]
        }) }}
    {% endif %}

    <form action="/register-template/confirmation" method="post">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">

        {% call interruptionCard({
            heading: "Are you sure you want to register this template?",
            primaryAction: {
                text: "Confirm"
            },
            secondaryAction: {
                text: "Cancel",
                href: "/register-template/upload"
            }
        }) -%}
            <p>Youâ€™ve chosen to register a new SAR template. This template will be used to generate reports for the following product:</p>
            <p><strong>Product name: {{ selectedProduct.label }}</strong></p>
            <p><strong>Template file name: {{ templateName }}</strong></p>
            <p>When you select Confirm, you verify that this template has been signed off by the Offender Subject Access Request (OSAR) team.</p>
            <p>If the template has not been signed off please select Cancel and refer to the SAR change control processes for template sign off.</p>
        {%- endcall %}
    </form>

{% endblock %}